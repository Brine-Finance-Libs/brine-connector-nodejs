{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "sample/index.ts", "index.d.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
