{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "preserveSymlinks": true
  },
  "include": ["./src/**/*", "example/rest.ts", "index.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
